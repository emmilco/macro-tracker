#!/bin/bash

# MacroTracker Setup Script
# Run this script to set up the MacroTracker application

echo "🍎 MacroTracker Setup Script"
echo "=============================="

# Check for Node.js
if ! command -v node &> /dev/null; then
    echo "❌ Node.js is not installed. Please install Node.js 18+ first."
    exit 1
fi

# Check Node version
NODE_VERSION=$(node -v | cut -d'v' -f2 | cut -d'.' -f1)
if [ "$NODE_VERSION" -lt 18 ]; then
    echo "❌ Node.js version 18+ is required. Current version: $(node -v)"
    exit 1
fi

echo "✅ Node.js $(node -v) detected"

# Install dependencies
echo ""
echo "📦 Installing dependencies..."
npm install

if [ $? -ne 0 ]; then
    echo "❌ Failed to install dependencies"
    exit 1
fi

echo "✅ Dependencies installed successfully"

# Check for .env file
if [ ! -f ".env" ]; then
    echo ""
    echo "⚠️  Environment file not found!"
    echo "📋 Creating .env file from template..."
    
    if [ -f ".env.example" ]; then
        cp .env.example .env
        echo "✅ Created .env file"
        echo ""
        echo "🔧 Please edit .env and add your Supabase credentials:"
        echo "   - VITE_SUPABASE_URL=your_supabase_project_url"
        echo "   - VITE_SUPABASE_ANON_KEY=your_supabase_anon_key"
        echo ""
        echo "📘 Get these from your Supabase project Settings > API"
    else
        echo "❌ .env.example not found"
        exit 1
    fi
else
    echo "✅ Environment file found"
fi

# Check if Supabase credentials are set
echo ""
echo "🔍 Checking environment variables..."

if grep -q "your_supabase_project_url" .env 2>/dev/null; then
    echo "⚠️  Please update your Supabase URL in .env"
    NEEDS_CONFIG=true
fi

if grep -q "your_supabase_anon_key" .env 2>/dev/null; then
    echo "⚠️  Please update your Supabase anon key in .env"
    NEEDS_CONFIG=true
fi

if [ "$NEEDS_CONFIG" = true ]; then
    echo ""
    echo "🔧 Configuration needed:"
    echo "   1. Go to https://supabase.com and create a project"
    echo "   2. Run the SQL schema from database-schema.sql"
    echo "   3. Get your URL and key from Settings > API"
    echo "   4. Update the .env file with your credentials"
    echo "   5. Run 'npm run dev' to start the development server"
else
    echo "✅ Environment variables appear to be configured"
    echo ""
    echo "🚀 Setup complete! Run 'npm run dev' to start developing"
fi

echo ""
echo "📚 Available commands:"
echo "   npm run dev      - Start development server"
echo "   npm run build    - Build for production"
echo "   npm run preview  - Preview production build"
echo ""
echo "🌐 After starting dev server, visit: http://localhost:5173"
echo ""
echo "Happy tracking! 🎯"